@page "/project/{projectId:guid}/edit"
@inherits AKS.App.Core.ProjectEditBase


<div role="group" class="container appcontent">
    <div class="row nav-content" />

    <EditForm Model="@Project" OnValidSubmit="@Save" autocomplete="off">
        <DataAnnotationsValidator />
        <div class="form-row">
            <div class="form-group col-md-4">
                <ValidatedInputText Id="projectName" @bind-Value="Project.Name" class="form-control" LabelText="Project Name"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="reset" @onclick="Cancel" class="btn btn-secondary">Cancel</button>

    </EditForm>
</div>
