@using AKS.Builder.Shared
@inherits DocumentTopicEditorModel

@if (!string.IsNullOrWhiteSpace(Topic.DocumentName))
{
<a href="@($"{_baseUri}/ContentDocument/{Topic.ProjectId}/{Topic.TopicId}/{Topic.DocumentName}")">@Topic.DocumentName</a>
}
<input type="file" ref="@_fileUploader" onchange="@UploadFile" accept=".png,.jpg,.jpeg,.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx" />
