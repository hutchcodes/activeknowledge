@page "/customer/{customerId:guid}"
@inherits AKS.App.Core.CustomerProjectListBase

<div role="document" class="container appcontent">
    <h1 class="display-4 m-0">@AppState?.HeaderNav?.CustomerName</h1>
    <div role="group" class="row">
        <div role="group" class="col mb-4 text-right">
            Sort options:
            <div class="btn-group" role="group" aria-label="Sort options">
                <button type="button" class="btn btn-outline-secondary"><i class="icon-watch left"></i></button>
                <button type="button" class="btn btn-outline-secondary"><i class="icon-users left"></i></button>
                <button type="button" class="btn btn-outline-secondary"><i class="icon-tag left"></i></button>
            </div>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Projects</th>
                <th scope="col" style="width:150px">Topic count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in ProjectList)
            {
                <tr>
                    <td><a href="project/@project.ProjectId">@project.Name</a></td>
                    <td>@project.TopicCount</td>
                </tr>
            }
        </tbody>
    </table>    
</div>

