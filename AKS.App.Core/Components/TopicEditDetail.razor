@using AKS.Common.Models
@using AKS.Common.Enums

@switch (Topic.TopicType)
{
    case TopicType.Content:  //Content
    case TopicType.Fragment:
        <TopicEditDetailContent Topic="Topic" />
        break;
    case TopicType.Collection: //Colleciton
        <TopicEditDetailCollection Topic="Topic" />
        break;
    case TopicType.Document: //Document
        break;
    default:
        <div>Unhandled Topic Type</div>
        break;
}

@code{
    [Parameter]
    public TopicEdit Topic { get; set; } = new TopicEdit();
}