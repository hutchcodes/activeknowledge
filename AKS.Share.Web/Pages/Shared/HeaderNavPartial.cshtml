@model AKS.Common.Models.HeaderNavView

<nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <div role="group" class="container">
        @*<a class="navbar-brand" href="#">CAPS</a>*@
        @if (Model.CustomerId != Guid.Empty)
        {
            <a asp-page="/Customer" asp-route-customerId="@Model.CustomerId" class="navbar-brand">
                <img src="/api/customerlogo/@Model.CustomerId/@Model.CustomerLogoURL" alt="@Model.CustomerName" style="max-height:40px;margin-top:2px;" />
            </a>
        }
        @*@if (Model.ProjectId.HasValue)
        {
            <a asp-page="/Project" asp-route-projectId="@Model.ProjectId">
                <img src="/api/projectlogo/@Model.ProjectId/@Model.ProjectLogoURL" alt="@Model.ProjectName" style="max-height:40px;margin-top:2px;" />
            </a>
        }*@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span role="img" class="navbar-toggler-icon"></span>
        </button>
        <div role="navigation" class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (Model.ProjectId.HasValue)
                {
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle btn-primary" href="#" id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @Model.ProjectName
                        </a>
                        <div role="option" class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Project" asp-route-projectId="@Model.ProjectId" class="dropdown-item">@Model.ProjectName</a>
                        </div>
                    </li>
                }
            </ul>
            <form class="form-inline">
                <div role="dialog" class="input-group">
                    <input type="text" class="form-control" placeholder="Search project" aria-label="Search this project">
                    <div role="dialog" class="input-group-append">
                        <button class="btn btn-secondary" type="button"><i class="icon-search left"></i></button>
                    </div>
                </div>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item active dropdown">
                    <a class="nav-link dropdown-toggle btn-primary" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="icon-user left"></i><span hidden>Person</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#" role="menuitem">UserProfile</a>
                        <a class="dropdown-item" href="/signout-oidc" role="menuitem">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>